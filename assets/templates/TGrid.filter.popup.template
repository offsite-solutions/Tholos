$(document).ready(function() {
  $('#modal_$prop_id .TGrid-filter-list').on('TGrid.show', function (event, filterData) {

    $("#modal_$prop_id .TGrid-filter-list > #value1-props").data("listsource", filterData.filterListSource);
    $("#modal_$prop_id .TGrid-filter-list > #value1-props").data("listsourceroute", filterData.filterListSourceRoute);
    $("#modal_$prop_id .TGrid-filter-list > #value1-props").data("listfilter", filterData.filterListFilter);
    Tholos.methods.TLOV_refresh("value1", "value1", "$prop_route", {container : "#modal_$prop_id .TGrid-filter-list"} );
  })
})
</script>